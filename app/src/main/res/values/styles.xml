<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Text View-->
    <style name="text_style" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen_5dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="text_style_white" parent="text_style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_style_gray" parent="text_style">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="text_style_blue" parent="text_style">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="text_style_white_15sp" parent="text_style_white">
        <item name="android:textSize">@dimen/dimen_15sp</item>
    </style>

    <style name="text_style_blue_20sp" parent="text_style_blue">
        <item name="android:textSize">@dimen/dimen_20sp</item>
    </style>

    <style name="text_style_gray_15sp" parent="text_style_gray">
        <item name="android:textSize">@dimen/dimen_15sp</item>
    </style>

    <style name="text_style_blue_20sp_bold" parent="text_style_blue_20sp">
        <item name="android:textStyle">bold</item>
    </style>

    <!--Button Style-->
    <style name="button_style">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen_15dp</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_style_transparent" parent="button_style">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="button_style_transparent_text_blue" parent="button_style_transparent">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="button_style_blue" parent="button_style">
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">@dimen/dimen_30dp</item>
    </style>








    <style name="main_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">320dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="til">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="boxBackgroundColor">#D3FFFFFF</item>
    </style>

    <style name="text">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#0E0E0E</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>
</resources>