    <!--Button Style-->
    <style name="button_style">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen_15dp</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_style_transparent" parent="button_style">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="button_style_transparent_text_blue" parent="button_style_transparent">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="button_style_blue" parent="button_style">
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">@dimen/dimen_15dp</item>
    </style>

    <style name="button_style_blue_margin_horizontal_32dp" parent="button_style_blue">
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/dimen_32dp</item>
    </style>

    <!--EditTextStyle-->
    <style name="edit_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/dimen_32dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="hintTextColor">@color/blue</item>
    </style>

    <style name="edit_text_input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:drawablePadding">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--DropdownMenu-->
    <style name="drop_down_menu_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/dimen_32dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="hintTextColor">@color/blue</item>
    </style>













    <style name="main_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">320dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="til">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="text">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#0E0E0E</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>



    <dimen name="dimen_14sp">14sp</dimen>
</resources>